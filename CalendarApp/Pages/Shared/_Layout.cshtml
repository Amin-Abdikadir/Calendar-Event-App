<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalendarApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-5BxEwqNhSmhHq2M1bAAVKiEIn+ojntL/kaXdTPXJyzA4LIWjmyGJGwXoP5q6cfe" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
   <link rel="stylesheet" href="~/css/custom.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CalendarApp</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CalendarApp
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-5BxEwqNhSmhHq2M1bAAVKiEIn+ojntL/kaXdTPXJyzA4LIWjmyGJGwXoP5q6cfe" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>



